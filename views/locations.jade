extends layout

block content
  .row
    .large-24.column
      h1 #{title}
    .large-24.column
      a(href='#', data-reveal-id='addLocation', class='radius button tiny secondary right') Add Location
    .large-24.column
      #locationList
        table.table-full-width
          thead
            th Location Name
            th Street Address
            th City
            th State
            th Zip
            th Website
            th Phone Number
            th
          tbody

      div(id='addLocation', class='reveal-modal', data-reveal, aria-labelledby='Add Location', aria-hidden='true', role='dialog')
        h3 Add Location
        fieldset
          .row
            .large-24.column
              label(for='inputLocationName') Location Name
              input#inputLocationName(type='text', required)
            .large-24.column
              label(for='inputLocationStreetAddress') Street Address
              input#inputLocationStreetAddress(type='text', required)
            .large-24.column
              label(for='inputLocationCity') City
              input#inputLocationCity(type='text')
            .large-24.column
              label(for='inputLocationState') State
              input#inputLocationState(type='text')
            .large-24.column
              label(for='inputLocationPostal') Zip Code
              input#inputLocationPostal(type='text')
            .large-24.column
              label(for='inputLocationUrl') Website
              input#inputLocationUrl(type='url')
            .large-24.column
              label(for='inputLocationPhone') Phone Number
              input#inputLocationPhone(type='tel')
            .large-24.column
              button#btnAddLocation Add Location
        a(class='close-reveal-modal', aria-label='Close') &#215;
